  {{#if loggedIn}}
  <h1>Workout Plan</h1>

      {{#each workouts as |workout|}}
        <div class="workout">
          <h3>{{workout.title}}</h2>
          <p>{{workout.content}}</p>
          <p>Calories: {{workout.time}}</p>
            <button class="delete-btn" data-id={{workout.id}}>Delete</button>
          </form>
        </div>
      {{/each}}
  
  <h3>Create a workout plan!</h3>
  <form id="create-form">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" required>
    <label for="content">Content:</label>
    <textarea name="content" id="content" required></textarea>
    <label for="time">Time Worked Out:</label>
    <input type="number" name="calories" id="time" required>
    <button type="submit">Create</button>
  </form>
  {{else}}
  <h2>You are not logged in! Please <a href='/login'>login</a> or <a href='/signup'>signup</a></h2>
  {{/if}}

  <script src="./assets/js/workout.js"></script>

