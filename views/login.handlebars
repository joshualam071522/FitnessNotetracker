{{#if loggedIn}}
<br>
<br>
<h2>You are already logged in! Return to homepage <a href="/">here</a></h2>
{{else}}
<h2>Login</h2>
<form id="login-form">
  <div class="form-group">
    <input type="text" name="username" id="username-input" class="form-control" placeholder="Username">
  </div>
  <div class="form-group">
    <input type="password" name="password" id="password-input" class="form-control" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary">Log In</button>
</form>
<p class="mt-3">Don't have an account? <a href="/signup">Sign Up</a></p>\
{{/if}}
<script src="./assets/js/login.js"></script>
