<h2>Sign Up</h2>
<form id="signup-form">
  <div class="form-group">
    <input type="text" name="username" id="username-input" class="form-control" placeholder="Username">
  </div>
  <div class="form-group">
    <input type="password" name="password" id="password-input" class="form-control" placeholder="Password">
  </div>
  <div class="form-group">
    <input type="password" name="confirmPassword" id="confirm-password-input" class="form-control" placeholder="Confirm Password">
  </div>
  <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
<p class="mt-3">Already have an account? <a href="/login">Log In</a></p>

<script src="./assets/js/signup.js"></script>